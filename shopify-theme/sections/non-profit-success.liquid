<div class="non-profit-success section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="title h1">{{ section.settings.heading }}</h2>
    {% endif %}

    {%- for success_story in collection.metafields.custom.success_stories.value -%}
      <div class="success-stories--main">
        {% if success_story.image != blank %}
          <img src="{{ success_story.image | image_url }}" class="{% if block.settings.flip %}order-n1{% endif %}" loading="lazy" width="auto" height="auto">
        {% endif %}

        <div class="success-stories--deatils {% if block.settings.flip %}flip{% endif %}">
          {% if success_story.title != blank %}
            <h3>{{ success_story.title }}</h3>
          {% endif %}

          {% if success_story.description != blank %}
            <p>{{ success_story.description | truncatewords: 100 }}</p>
          {% endif %}

          {% if success_story.cta_label != blank %}
            <a href="{{ success_story.cta_link }}">{{ success_story.cta_label }}</a>
          {% endif %}
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>
